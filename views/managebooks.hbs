<div class="topnav">
        <img src = "img/header.jpg" width="300" class="right">
        <a href="/">Home</a>        
        <a href="nations">Nations</a>
        <a href="characters">Characters</a>
        <a href="authors">Authors</a>
        <a class="active" href="books">Books</a>
</div>
    
<h1>Current Book: {{bookTitle}}</h1>
<h3>Authors</h3>
<table id="BooksAuthors Table">

    <tr>
        <th>Book Name</th>
        <th>Author ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
    {{#each authors}}
    <tr id-value="{{this.authorId}}">
        <td>{{this.title}}</td>
        <td>{{this.authorId}}</td>
        <td>{{this.fname}}</td>
        <td>{{this.lname}}</td>
        <td>
            <button onclick="deleteBooksAuthor({{this.authorId}}, {{this.bookId}})">Delete</button>
        </td>
    </tr>
    {{/each}}
    <tr>
        <td>{{bookTitle}}</td>
        <td colspan="3">
            <select id="authSelect">
                {{#each allAuthors}}
                <option value={{this.authorId}}>{{this.authDisplay}}</option>   
                {{/each}}                
            </select>   
        </td>                             
        <td>
            <form id="addAuthorForm">
                <button type="submit" id="addAuthor" value={{bookId}}>Add</button>
            </form>
        </td>
    </tr>
</table>


<h3>Characters</h3>
<table>
    <tr>
        <th>Book Name</th>
        <th>Character ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>        
    {{#each characters}}
    <tr>
        
        <td>{{this.title}}</td>
        <td>{{this.characterId}}</td>
        <td>{{this.fname}}</td>
        <td>{{this.lname}}</td>
        <td>
            <button onclick="deleteBooksChar({{this.characterId}}, {{this.bookId}})">Delete</button>
        </td>
    </tr>
    {{/each}}
    <tr>
        <td>{{bookTitle}}</td>
        <td colspan="3">
            <select id="charSelect">
                {{#each allChars}}
                <option value={{this.characterId}}>{{this.charDisplay}}</option>    
                {{/each}}                                
            </select>   
        </td>                             
        <td>
            <form id="addCharForm">
                <button type="submit" id="addChar" value={{bookId}}>Add</button></td>
            </form>
    </tr>

    
</table>
<br>
